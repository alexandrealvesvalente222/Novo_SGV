# Configurações do Sistema de Gestão de Veículos (SGV)

# Database
DATABASE_URL=sqlite:///./data/sgv.db

# FastAPI
DEBUG=true
RELOAD=true
HOST=0.0.0.0
PORT=8000

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000", "http://127.0.0.1:8000"]

# Logging
LOG_LEVEL=INFO

# Cache
CACHE_TTL=300

# Parâmetros do cálculo da Nota de Ocupação
NOTA_OCUPACAO_W_KM=0.6
NOTA_OCUPACAO_W_MNT=0.4
NOTA_OCUPACAO_MNT_MAX_6M=6

# Referências de quilometragem por categoria (em km)
KM_REF_MOTO=120000
KM_REF_SUV=300000
KM_REF_CAMINHONETE=300000
KM_REF_VAN=350000
KM_REF_SEDAN=220000
KM_REF_HATCH=220000
KM_REF_PICKUP=300000
KM_REF_UTILITARIO=250000

# Fatores de área de atuação
AREA_FATOR_URBANA=1.00
AREA_FATOR_RURAL=1.05
AREA_FATOR_MISTA=1.03
AREA_FATOR_MONTANHOSA=1.10
AREA_FATOR_OFF_ROAD=1.10
